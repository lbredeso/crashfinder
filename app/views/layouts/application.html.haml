!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Crash Finder"
    = csrf_meta_tags
    %script{:src => "http://maps.googleapis.com/maps/api/js?key=#{Rails.configuration.google_maps_api_key}&sensor=false&libraries=drawing", :type => "text/javascript"}
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/favicon.ico" rel="shortcut icon")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Crash Finder", root_path, class: 'brand'
          .container.nav-collapse
            %ul.nav
              %li= link_to "Clusters", clusters_path
              - if current_user
                %li= link_to "Top", top_index_path
                %li= link_to "Locations", locations_path
                %li= link_to "Trends", "/trends"
              %li.dropdown
                %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
                  My Account <b class="caret"></b>
                %ul.dropdown-menu
                  - if current_user
                    %li= link_to "Log out", logout_path
                  - else
                    %li= link_to "Log in", login_path 
                    %li= link_to "Sign up", signup_path

    .container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      = yield
    
      %footer
        %p &copy; Luke Bredeson 2012
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
    = yield :javascript
